{"ast":null,"code":"export default {\n  props: ['toggle', 'cart', 'inventory', 'removeitem'],\n  methods: {\n    getPrice(name) {\n      const product = this.inventory.find(p => {\n        return p.name === name;\n      });\n      return product.price.USD;\n    },\n    calculateTotal() {\n      const total = Object.entries(this.cart).reduce((acc, curr, index) => {\n        return acc + curr[1] * this.getPrice(curr[0]);\n      }, 0);\n      return total.toFixed(2);\n    }\n  }\n};","map":{"version":3,"names":["props","methods","getPrice","name","product","inventory","find","p","price","USD","calculateTotal","total","Object","entries","cart","reduce","acc","curr","index","toFixed"],"sources":["/Users/macbookpro/Documents/University/Year 3/Pathway 1/COS30043 Interface Design and Development/Week 6/6.2HD/football-store-app/src/components/Sidebar.vue"],"sourcesContent":["<template>\n    <aside class=\"cart-container\">\n        <div class=\"cart\">\n            <h1 class=\"cart-title spread\">\n            <span>\n                Cart\n                <i class=\"icofont-cart-alt icofont-1x\"></i>\n            </span>\n            <button\n                @click=\"toggle\"\n                class=\"cart-close\"\n                >&times;</button>\n            </h1>\n\n            <div class=\"cart-body\">\n            <table class=\"cart-table\">\n                <thead>\n                <tr>\n                    <th><span class=\"sr-only\">Product Image</span></th>\n                    <th>Product</th>\n                    <th>Price</th>\n                    <th>Qty</th>\n                    <th>Total</th>\n                    <th><span class=\"sr-only\">Actions</span></th>\n                </tr>\n                </thead>\n                <tbody>\n                <tr v-for=\"(quantity, key, i) in cart\" :key=\"i\">\n                    <td><i class=\"icofont-carrot icofont-3x\"></i></td>\n                    <td>{{ key }}</td>\n                    <td>${{ getPrice(key) }}</td>\n                    <td class=\"center\">{{ quantity }}</td>\n                    <td>${{ (getPrice(key) * quantity).toFixed(2) }}</td>\n                    <td class=\"center\">\n                    <button @click=\"removeitem(key)\" class=\"btn btn-light cart-remove\">\n                        &times;\n                    </button>\n                    </td>\n                </tr>\n                </tbody>\n            </table>\n            <p class=\"center\" v-if=\"!Object.keys(cart).length\"><em>No items in cart</em></p>\n            <div class=\"spread\">\n                <span><strong>Total:</strong> ${{ calculateTotal() }}</span>\n                <button class=\"btn btn-light\">Checkout</button>\n            </div>\n            </div>\n        </div>\n    </aside>\n</template>\n\n<script>\nexport default {\n  props: ['toggle', 'cart', 'inventory', 'removeitem'],\n  methods: {\n    getPrice(name) {\n      const product = this.inventory.find((p) => {\n        return p.name === name\n      })\n      return product.price.USD\n    },\n    calculateTotal() {\n      const total = Object.entries(this.cart).reduce((acc, curr, index) => {\n        return acc + (curr[1] * this.getPrice(curr[0]))\n      }, 0)\n      return total.toFixed(2)\n    }\n  }\n}\n</script>\n"],"mappings":"AAoDA,eAAe;EACbA,KAAK,EAAE,CAAC,QAAQ,EAAE,MAAM,EAAE,WAAW,EAAE,YAAY,CAAC;EACpDC,OAAO,EAAE;IACPC,QAAQA,CAACC,IAAI,EAAE;MACb,MAAMC,OAAM,GAAI,IAAI,CAACC,SAAS,CAACC,IAAI,CAAEC,CAAC,IAAK;QACzC,OAAOA,CAAC,CAACJ,IAAG,KAAMA,IAAG;MACvB,CAAC;MACD,OAAOC,OAAO,CAACI,KAAK,CAACC,GAAE;IACzB,CAAC;IACDC,cAAcA,CAAA,EAAG;MACf,MAAMC,KAAI,GAAIC,MAAM,CAACC,OAAO,CAAC,IAAI,CAACC,IAAI,CAAC,CAACC,MAAM,CAAC,CAACC,GAAG,EAAEC,IAAI,EAAEC,KAAK,KAAK;QACnE,OAAOF,GAAE,GAAKC,IAAI,CAAC,CAAC,IAAI,IAAI,CAACf,QAAQ,CAACe,IAAI,CAAC,CAAC,CAAC,CAAC;MAChD,CAAC,EAAE,CAAC;MACJ,OAAON,KAAK,CAACQ,OAAO,CAAC,CAAC;IACxB;EACF;AACF","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}